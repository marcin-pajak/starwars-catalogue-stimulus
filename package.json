{
  "name": "starwars-catalogue",
  "version": "1.0.0",
  "description": "StarWars Catalogue",
  "main": "dist/app.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "copy-assets": "ts-node scripts/copy",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "parcel": "parcel build src/client/main.ts -d dist/public",
    "build": "npm-run-all clean lint tsc copy-assets parcel",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --watch src -e ts,ejs,css --exec npm run dev:start",
    "start": "node .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Marcin Pajak",
  "license": "ISC",
  "dependencies": {
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "fetch-cached": "^2.0.3",
    "http-errors": "^1.7.3",
    "node-cache": "^5.1.0",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/fs-extra": "^8.0.1",
    "@types/http-errors": "^1.6.3",
    "@types/node": "^13.7.0",
    "@types/node-cache": "^4.2.5",
    "@types/node-fetch": "^2.5.4",
    "@types/shelljs": "^0.8.6",
    "fs-extra": "^8.1.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "rimraf": "^3.0.1",
    "shelljs": "^0.8.3",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
    "typescript": "^3.7.5"
  }
}
